---
import Layout from "@layout/Layout.astro";
---

<Layout pageTitle="404" description="not found" type="notfound">
  <main
    class="flex flex-col justify-center items-center px-16 pt-40 mx-auto max-w-6xl text-center sm:pt-24 lg:px-24"
  >
    <div class="text-5xl font-extrabold">
      <span
        class="text-transparent bg-clip-text bg-gradient-to-r from-pink-500 to-violet-500"
      >
        Bad request
      </span>
    </div>

    <div class="mt-8"></div>
      <img
        src="/images/404.png"
        alt="404 Not Found Image"
        class="max-w-md mx-auto"
        width="400"
        height="300"
      />
    </div>

    <a
      href="/"
      class="mt-8 px-6 py-3 text-white bg-gradient-to-r from-pink-500 to-violet-500 rounded-md hover:opacity-90 transition-opacity"
    >
      Go back home
    </a>
  </main>
</Layout>
